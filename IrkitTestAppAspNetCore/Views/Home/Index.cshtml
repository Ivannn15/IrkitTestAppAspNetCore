@model Employee
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    
    <main>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <form asp-action="addNewEmployee" method="post" enctype="multipart/form-data">
            <div class="form_cantainer input-group mb-3">
                <div class="custom-file">
                    <input asp-action="" type="file" name="xmlFile" id="xmlFile" class="custom-file-input">
                    <label class="custom-file-label" for="xmlFile">Выберите файл</label>
                </div>
                <button type="submit" class="btn-dark rounded-1">Отправить</button>
            </div>
        </form>

        <span id="filename"></span>

        <div class="wrapper">
            <div class="block">
                <p>Id</p>
                <hr />
                <a href="news.html">@Model.Id</a>
            </div>
            <div class="block">
                <p>AuthorId</p>
                <hr />
                <a href="advertisement.html">@Model.AuthorId</a>
            </div>
            <div class="block">
                <p>Content</p>
                <hr />
                <a href="ourActivities.html">@Model.Content</a>
            </div>
            <div class="block">
                <p>FirstName</p>
                <hr />
                <a href="">@Model.FirstName</a>
            </div>
            <div class="block">
                <p>KindName</p>
                <hr />
                <a href="aboutUs.html">@Model.KindName</a>
            </div>
            <div class="block">
                <p>Performer</p>
                <hr />
                <a href="partners.html">@Model.Performer</a>
            </div>
            <div class="block">
                <p>ReferenceList</p>
                <hr />
                <a href="reports.html">@Model.ReferenceList</a>
            </div>
            <div class="block">
                <p>RegDate</p>
                <hr />
                <a href="writeUs.html">@Model.RegDate</a>
            </div>
        </div>
    </main>

</body>
</html>